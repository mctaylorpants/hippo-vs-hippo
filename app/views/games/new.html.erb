<div class="flex justify-center items-center h-screen flex-col">
  <div class="flex">
    <div class="shrink-0 mr-1 rounded-2xl border border-2 border-purple-500 bg-[url('/hippo01.jpg')] bg-bottom bg-no-repeat bg-contain w-24 h-24"></div>
    <div class="shrink-0 rounded-2xl border border-2 border-blue-500 bg-[url('/hippo02.jpg')] bg-bottom bg-no-repeat bg-contain w-24 h-24"></div>
  </div>
  <div>
    <h1 class="text-xl">
      <span class="text-blue-500">HIPPO</span>
      <span class="text-gray-500">vs</span>
      <span class="text-purple-500">HIPPO</span>
    </h1>
  </div>

  <% if flash[:error] %>
    <div class="rounded-md bg-yellow-50 p-2">
      <%= flash[:error] %>
    </div>
  <% end %>

  <div>
    <%= link_to "new game", @game, data: { turbo_method: :post }, class: "block text-center rounded-lg bg-gray-100 m-4 p-4 border text-purple-500" %>

    <%= form_tag "/games", method: :get do %>
      <div class="flex flex-col rounded-lg bg-gray-100 m-4 p-4 border text-blue-500">
        <%= text_field_tag :game_id, nil, placeholder: "e.g. haunted-estuary", class: "p-1" %>
        <%= submit_tag "join game", class: "mt-4" %>
      </div>
    <% end %>
  </div>
